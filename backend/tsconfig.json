  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2019",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "build"]
}
