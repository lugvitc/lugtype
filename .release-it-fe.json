{
  "hooks": {
    "before:init": ["npm run lint"],
    "before:release": [
      "cd frontend && npm run deploy-live",
      "sh ./bin/purgeCfCache.sh"
    ]
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireCleanWorkingDir": true,
    "changelog": "node bin/buildChangelog.mjs"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false,
    "ignoreVersion": true
  }
}
